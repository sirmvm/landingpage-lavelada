<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>La velada del año - Un proyecto independiente</title>
		<!-- precargar la fuente-->	
		<link rel="preload" href="/fonts/boxing.woff2" as="font" type="font/woff2" crossorigin>
	</head>
	<body class="relative">
		<!-- Header -->	
		<header class="relative">
			<div class="md:lg:absolute lg:left-1/2 lg:-translate-x-1/2 flex flex-col gap-1 justify-center items-center mt-4 lg:mt:0 lg:top-8 z-10" >
				<img
					class="w-32 lg:w-64 h-auto"
					alt="logo"
					src="./boxers/logo.png.webp"
				/>
				<h1 class="font-boxing text-5xl text-center text-white font-bold">
					<span class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-300 to-white inline-block leading-relaxed">la velada de matias</span>
				</h1>
			</div>
			

		</header>

		<main class="relative">
			<!-- Sección boxeadores -->	
			<section
				id="boxeadores"
				class={`flex justify-between relative
				[&>div>img]:absolute [&>div>img]:bottom-0
				[&>div>img]:w-auto
				[&>div>img]:animate-duration-1000 [&>div>img]:animate-ease-in-out
				h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10				
				`}>
				
				<!-- Gradiente de fondo -->	
				<div
				class="bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131824] via-zinc-900 to-zinc-950 h-full w-full inset-0 absolute"
				>
				</div>
				
				<!-- Lineas de fondo -->	
				<div
					class="absolute inset-0 flex gap-x-3 left-1/2 -translate-x-1/2 justify-center opacity-20 blur-sm">
					<div
						class="w-2 drop-shadow-lg h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500">
					</div>
					<div
						class="w-2 drop-shadow-lg h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500">
					</div>
					<div
						class="w-2 drop-shadow-lg h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500">
					</div>
				</div>

				<!-- Boxeadores lado izquiero -->	
				<div class="relative w-full ">
					<img class="left-0 h-full z-50 animate-fade-right" src="/boxers/Coscu-1.png.webp" alt="coscu">
					<img class="left-[5%] h-[80%] z-40 animate-delay-300 animate-fade-right" src="/boxers/Mayichi-1.png.webp" alt="mayichi">
					<img class="left-[15%] h-[75%] z-30 animate-delay-500 animate-fade-right" src="/boxers/Viruzz.png.webp" alt="viruzz">
					<img class="left-[30%] h-[70%] z-20 animate-delay-700 animate-fade-right" src="/boxers/fernando.png.webp" alt="fernando">
					<img class="left-[42%] h-[68%] z-10 animate-delay-1000 animate-fade-right" src="/boxers/LaRivers.png.webp" alt="larivers">
					<img class="left-[45%] h-[63%] z-0 animate-delay-[1300ms] animate-fade-right" src="/boxers/Papigavi-1.png.webp" alt="papigavi" fetchpriority="low">
				</div>
				<!-- Boxeadores lado derecho -->	
				<div class="relative w-full">
					<img class="right-0 h-full z-50 animate-delay-300 animate-fade-left" src="/boxers/German-1.png.webp" alt="german">
					<img class="right-[5%] h-[80%] z-40  animate-delay-300 animate-fade-left" src="/boxers/Amouranth-1.png.webp" alt="amouranth">
					<img class="right-[18%] h-[75%] z-30 animate-delay-500 animate-fade-left" src="/boxers/Shelao-1.png.webp" alt="shelao">
					<img class="right-[30%] h-[70%] z-20 animate-delay-700 animate-fade-left" src="/boxers/Luzu-1.png.webp" alt="luzu">
					<img class="right-[42%] h-[68%] z-10 animate-delay-1000 animate-fade-left" src="/boxers/Rivers-1.png.webp" alt="rivers">
					<img class="right-[45%] h-[63%] z-0 animate-delay-[1300ms] animate-fade-left" src="/boxers/Ampeter-1.png.webp" alt="ampeter" fetchpriority="low">
				</div>			
				
			</section>
			<!-- Banner Info y Combate -->	
			<div 
			id="info"
			class="block lg:absolute lg:bottom-32 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2"
		>
			<div class="flex flex-col">
				<div class="px-5 pt-4 pb-2 bg-white text-black text-center">
					<h2 class="font-boxing text-7xl">1 de julio</h2>
				</div>
				<div class="px-5 pt-2 pb-1 bg-black text-white text-center">
					<a 
						class="hover:contrast-150 hover:scale-105 transition font-boxing text-[46px] inline-block" 
						href="https://github.com/sirmvm" 
						target="_blank"
						rel="noopener noreferrer">
						<span class="text-blue-100">github/</span>
						<span class="text-yellow-500">sirmvm</span>
					</a>
				</div>
				<div class="px-5 pt-2 pb-1 bg-sky-600 text-black text-center">
					<a 
						class="hover:contrast-150 hover:scale-105 transition font-boxing text-4xl inline-block text-white" 
						href="" 
						target="_blank"
						rel="noopener noreferrer">comprar entradas</a>
				</div>
				
			</div>
			</div>
			<!-- Banner combate vs -->	
			<div
				id="combat"
				class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-24 opacity-0 invisible"
				>
				<div class="px-5 pt-4 pb-2 bg-black text-white text-center">
					<h3 class="font-boxing text-6xl"></h3>
				</div>

				<span class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing
				text-yellow-500 text-7xl block absolute [text-shadow:2px_2px_0px_red, 4px_4px_0px_orange, 6px_6px_0px_black]"
				>
					vs
				</span>

				<div class="px-5 pt-4 pb-2 bg-white text-black text-center">
					<h3 class="font-boxing text-6xl"></h3>
				</div>

				
			</div>
		</main>

		<footer></footer>
		
	</body>
</html>
<!-- Styles -->	
<style is:global>
	body{
		background: #131313;
	}

	@font-face {
		font-family: 'Boxing';
		src: url('/fonts/boxing.woff2') format('woff2');
		font-weight: bold;
	}

	@font-face{
		font-family: 'Boxing Striped';
		src: url('/fonts/boxing-striped.woff2') format('woff2');
		font-weight: bold;
	}
</style>
<!-- Script -->	
<script>
import { info } from "astro/dist/core/logger/core";

	const $boxers = document.querySelector('#boxeadores');
	const $boxersImages = $boxers.querySelectorAll('img');

	const $info = document.querySelector('#info');
	const $combat = document.querySelector('#combat');

	$boxersImages.forEach($img => {
		$img.addEventListener('mouseleave', () => {
			$boxersImages.forEach(($img) => {
				$img.style.filter ="none";
				$img.style.transition="all .3s ease-in-out";
				$img.style.scale="1";
			})
			$info.setAttribute(
				'style', 
				'opacity:1; transition: all .3s ease-in-out'
			)
			$combat.setAttribute(
				'style', 
				'opacity:0; transition: all .3s ease-in-out; visibility:hidden'
			)
		})
		$img.addEventListener('mouseenter', () => {
			const sectionImages = $img.parentNode.children
			const position = Array.from(sectionImages).indexOf($img)
			//get image for the left siede and the right side
			const[leftBoxer, rightBoxer] = [
				$boxersImages[position], //posición partiendo de la izquierda
				$boxersImages[position + $boxersImages.length/2] //posición partiendo de la derecha
			]


			//ocultamos la información

			$info.setAttribute(
				'style', 
				'opacity:0; transition: all .3s ease-out'
			)
			$combat.setAttribute(
				'style', 
				'opacity:1; transition: all .3s ease-out; visibility:visible'
			)
			
			//colocar el nombre de cada boxeador en el vs
			const[firtstBoxerName, secondBoxerName]= $combat.querySelectorAll("h3")
			firtstBoxerName.innerText = leftBoxer.alt
			secondBoxerName.innerText = rightBoxer.alt



			//ocultar los boxeadores que no interesan
			$boxersImages.forEach(($img) => {
				$img.setAttribute(
					'style', 
					'filter: blur(2px) grayscale(.8); transition: all .1s ease-out'
				)
			})

			leftBoxer.setAttribute(
				'style', 
				'scale:1.2; contrast:1.1; transition: all .3s ease-out'
			)
			rightBoxer.setAttribute(
				'style', 
				'scale:1.2; contrast:1.1; transition: all .3s ease-out'
			)
		})
		
	})
</script>
